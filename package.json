{
  "dependencies": {
    "cypress": "^7.7.0"
  },
  "devDependencies": {
    "allure-commandline": "^2.20.1",
    "mocha-allure-reporter": "^1.4.0"
  },
  "scripts": {
    "cy:regression": "cypress run --reporter mocha-allure-reporter",
    "cypress:chrome": "cypress run --browser chrome --reporter mocha-allure-reporter",
    "cypress:edge": "cypress run --browser edge --reporter mocha-allure-reporter",
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open  allure-report",
    "test:allure": "npm run cy:regression && npm run report:allure"

  }
}
